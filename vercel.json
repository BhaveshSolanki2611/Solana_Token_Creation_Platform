{
  "version": 2,
  "name": "solana-token-creation-platform",
  "buildCommand": "npm install --legacy-peer-deps && cd client && npm install --legacy-peer-deps && CI=false npm run build",
  "outputDirectory": "client/build",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CI": "false"
  },
  "regions": ["iad1"]
}