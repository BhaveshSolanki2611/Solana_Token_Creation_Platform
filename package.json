{
  "name": "solana-token-creation-platform",
  "version": "1.0.0",
  "description": "A platform for creating and deploying Solana tokens",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install --legacy-peer-deps",
    "install-server": "npm install --legacy-peer-deps",
    "install-all": "npm run install-server && npm run install-client",
    "build": "node build.js",
    "build:prod": "node scripts/production-build.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install-client && npm run build",
    "vercel-build": "npm run install-all && cd client && npm run build"
  },
  "engines": {
    "node": ">=18.x"
  },
  "keywords": [
    "solana",
    "token",
    "blockchain",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@solana/spl-token": "^0.3.8",
    "@solana/web3.js": "^1.98.2",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "bs58": "^5.0.0",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "crypto-browserify": "^3.12.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "https-browserify": "^1.0.0",
    "memory-cache": "^0.2.0",
    "mongoose": "^7.6.3",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.4",
    "vm-browserify": "^1.1.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
